<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F1E88E5"
    tools:context=".doctor.ViewProfileDoc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_profile_pic"
            android:layout_width="163dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/doctor"
            app:civ_border_color="#000"
            app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/name"
                android:layout_width="81dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Name:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="179dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/name"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"

                android:text="@string/dr_name"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/gender"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Gender:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_gender"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/gender"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Male"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dob"
                android:layout_width="90dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="DOB:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_dob"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/dob"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="08-05-1997"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/EmailId"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="EmailId:-"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Doc_EmailId"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/EmailId"
                android:gravity="center"
                android:text="abc@gmail.com"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/Clinic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="ClinicName:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doc_clinic"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/Clinic"
                android:gravity="center"
                android:text="abc Clinic"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/degree"
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Degree:-"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doc_degree"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@id/degree"
                android:gravity="center"
                android:text="MBBS"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/PracticeStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Starting Year:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/practiceyear"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/PracticeStart"
                android:gravity="center"
                android:text="2001"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/type"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Doctor Type:-"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doc_type"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginStart="26dp"
                android:layout_toEndOf="@id/type"
                android:gravity="center"
                android:text="Orthopedic"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/fees"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Fees:-"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doc_fees"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@id/fees"
                android:gravity="center"
                android:text="2000 \u20B9"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/Address"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Address:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doc_address"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/Address"
                android:gravity="center"
                android:text="@string/address"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/city"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="City:- "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Doc_city"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/city"
                android:gravity="center"
                android:text="City"
                android:textColor="#D53125"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/EditProfile"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:background="@color/background"
                android:text="Edit_Profile"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/EditClinic"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/EditProfile"
                android:fontFamily="@font/roboto_slab"
                android:background="@color/background"
                android:gravity="center"
                android:text="Edit_Clinic"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>