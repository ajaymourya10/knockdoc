<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FAF9"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        android:padding="5dp">


        <EditText
            android:id="@+id/search_box_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".25"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="10dp"
            android:hint="Search.."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="15sp" />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:autoSizeTextType="uniform"
            android:background="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Search" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <!-- Using CardView for CircularImageView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="50dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/heartsurgon" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="Heart Surgeon"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/cardview1"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/orthopedic" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView2"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="5dp"
            android:text="Orthopedic"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/cardView2"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/paedtrician" />

        </androidx.cardview.widget.CardView>

        <!--Line 2-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView3"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Paediatrician"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardview1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dentist" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"
            android:text="Dentist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardView3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/cardview1"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/physcatrist" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView5"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="11dp"
            android:text="Psychiatrist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardView3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/cardView2"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/neurologist" />

        </androidx.cardview.widget.CardView>

        <!--Line 3-->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView6"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="11dp"
            android:text="Neurologist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardView4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gynacologist" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView7"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Gynecologist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardView5"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/cardview1"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView8"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="ENT Specialist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_below="@+id/cardView6"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/cardView2"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/physiotherapist" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView9"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Physiotherapist"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>