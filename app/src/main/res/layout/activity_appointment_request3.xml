<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".patient.AppointmentRequest3">

    <include
        android:id="@+id/book_appointment_toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/baloo"
                android:text="Doctor's Information"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/doctor_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/doctor_pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/doctor_pic"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/doc_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/dr_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/doc_degree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="MBBS MD"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/doc_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Physician"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/doc_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textColor="#9C27B0"
                            android:text="Doctor's Fee: 1555 rs"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp" />


                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/baloo"
                android:text="Patient's Information"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#CDDC39"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pt_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/doctor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/pt_pic"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="@string/dr_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="DOB: 08/09/1998"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/pt_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Gender: Male"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/pt_appointment_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_slab"
                            android:paddingStart="20dp"
                            android:text="Appointment Date: 22/09/2021"
                            android:textSize="12sp" />


                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <CheckBox
                    android:id="@+id/verify_details"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:background="?android:attr/listChoiceIndicatorMultiple"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify Above Details"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/book_appointment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="50dp"
                android:padding="10dp"
                android:text="Book Appointment" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>